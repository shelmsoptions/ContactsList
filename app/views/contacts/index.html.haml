%h1 Contacts List

%table.table.table-responsiveness.table-striped.table-bordered.table-hover
  %thead 
    %th First Name
    %th Last Name
    %th Dept / Title
    %th Ext
    %th Email
    %th Cell
    %th{ colspan:'2' }Action(s)
  %tbody
    - @contacts.each do |contact|
      %tr
        %td= contact.first_name
        %td= contact.last_name
        %td= contact.dept_title_id
        %td= contact.phone_extension
        %td= contact.email
        %td= contact.cell_phone
        %td= link_to 'Edit', edit_contact_path(contact)
        %td= link_to 'Remove', contact, method: :delete, data: { confirm: 'Remove...positive?' }
  


= link_to 'Add New Contact', new_contact_path
